<header class="navbar navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "thegioimobile", root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav">
        <li><%= link_to t("static_pages.phone.title"), phone_path %></li>
        <li><%= link_to t("static_pages.tablet.title"), tablet_path %></li>
        <li><%= link_to t("static_pages.laptop.title"), laptop_path %></li>
        <li><%= link_to t("static_pages.accessory.title"), accessory_path %></li>
        <li><%= link_to t("static_pages.sale.title"), sale_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <form class="navbar-form navbar-left" action="">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search">
            <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
            </div>
          </div>
        </form>
        <% if logged_in? %>
          <% if current_user.admin? %>
          <% else %>
            <li><span class="glyphicon glyphicon-shopping-cart"></span> <span class="badge">0</span></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>  <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin? %>
                <li><%= link_to manager_path do %>
                  <span class="glyphicon glyphicon-cog manager"></span> <%= t ".manager" %>
                <% end %></li>
              <% else %>
                <li><%= link_to current_user do %>
                  <span class="glyphicon glyphicon-briefcase"></span> <%= t ".profile" %>
                <% end %></li>
                <li><%= link_to edit_user_path(current_user) do %>
                  <span class="glyphicon glyphicon-cog"></span> <%= t ".setting" %>
                <% end %></li>
              <% end %>
              <li><%= link_to logout_path, method: :delete do %>
                  <span class="glyphicon glyphicon-log-out"></span> <%= t ".destroy" %>
              <% end %></li>
            </ul>
          </li>
        <% else %>
          <li id="signin">
            <%= link_to login_path do %>
              <span class="glyphicon glyphicon-log-in"></span> <%= t "sessions.new.title" %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
